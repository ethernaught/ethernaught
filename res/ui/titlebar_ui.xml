<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk+" version="3.24"/>

    <object class="GtkBox" id="titlebar">
        <property name="name">titlebar</property>
        <property name="visible">True</property>
        <property name="hexpand">True</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">30</property>
        <property name="height-request">40</property>

        <child>
            <object class="GtkBox" id="navigation_options">
                <property name="name">navigation_options</property>
                <property name="visible">True</property>
                <property name="hexpand">True</property>
                <property name="orientation">horizontal</property>
                <property name="spacing">10</property>

                <child>
                    <object class="GtkImage">
                        <property name="visible">True</property>
                        <property name="icon-name">app-icon</property>
                        <property name="file">res/icons/ic_launcher_small.svg</property>
                    </object>
                </child>

                <child>
                    <object class="GtkBox" id="navigation_buttons">
                        <property name="name">navigation_buttons</property>
                        <property name="visible">True</property>
                        <property name="hexpand">True</property>
                        <property name="orientation">horizontal</property>
                        <property name="spacing">10</property>

                        <child>
                            <object class="GtkButton" id="menu_button">
                                <property name="name">menu_button</property>
                                <property name="tooltip-text">Main Menu</property>
                                <property name="visible">True</property>
                                <property name="width-request">24</property>
                                <property name="height-request">24</property>
                            </object>
                        </child>

                        <child>
                            <object class="GtkButton" id="back_button">
                                <property name="name">back_button</property>
                                <property name="tooltip-text">Back</property>
                                <property name="visible">True</property>
                                <property name="width-request">24</property>
                                <property name="height-request">24</property>
                            </object>
                        </child>

                        <child>
                            <object class="GtkButton" id="next_button">
                                <property name="name">next_button</property>
                                <property name="tooltip-text">Forward</property>
                                <property name="visible">True</property>
                                <property name="width-request">24</property>
                                <property name="height-request">24</property>
                            </object>
                        </child>

                        <child>
                            <object class="GtkImage" id="network_type_icon">
                                <property name="name">network_type_icon</property>
                                <property name="visible">True</property>
                                <property name="width-request">24</property>
                                <property name="height-request">24</property>
                                <property name="icon-name">network-type</property>
                                <property name="file">res/icons/ic_wifi.svg</property>
                            </object>
                        </child>

                        <child>
                            <object class="GtkLabel" id="network_type_label">
                                <property name="name">network_type_label</property>
                                <property name="visible">True</property>
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="GtkMenuBar" id="navigation_menubar">
                        <property name="name">navigation_menubar</property>
                        <property name="visible">False</property>
                        <property name="hexpand">True</property>
                        <property name="height-request">40</property>
                    </object>
                </child>
            </object>
        </child>

        <child>
            <object class="GtkBox" id="app_options">
                <property name="name">app_options</property>
                <property name="visible">False</property>
                <property name="orientation">horizontal</property>
                <property name="spacing">10</property>

                <child>
                    <object class="GtkButton" id="start_button">
                        <property name="name">start_button</property>
                        <property name="tooltip-text">Run</property>
                        <property name="visible">True</property>
                        <property name="width-request">24</property>
                        <property name="height-request">24</property>
                    </object>
                </child>

                <child>
                    <object class="GtkButton" id="stop_button">
                        <property name="name">stop_button</property>
                        <property name="tooltip-text">Stop</property>
                        <property name="visible">False</property>
                        <property name="width-request">24</property>
                        <property name="height-request">24</property>
                    </object>
                </child>
            </object>
        </child>



        <child>
            <object class="GtkBox">
                <property name="name">window_options</property>
                <property name="visible">True</property>
                <property name="orientation">horizontal</property>
                <property name="spacing">10</property>

                <child>
                    <object class="GtkButton" id="minimize_button">
                        <property name="name">window_minimize</property>
                        <property name="tooltip-text">Minimize</property>
                        <property name="visible">True</property>
                        <property name="width-request">16</property>
                        <property name="height-request">16</property>
                    </object>
                </child>


                <child>
                    <object class="GtkButton" id="maximize_button">
                        <property name="name">window_maximize</property>
                        <property name="tooltip-text">Maximize</property>
                        <property name="visible">True</property>
                        <property name="width-request">16</property>
                        <property name="height-request">16</property>
                    </object>
                </child>

                <child>
                    <object class="GtkButton" id="close_button">
                        <property name="name">window_close</property>
                        <property name="tooltip-text">Close</property>
                        <property name="visible">True</property>
                        <property name="width-request">16</property>
                        <property name="height-request">16</property>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>